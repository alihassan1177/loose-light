---
import Github from "../images/github.png";
import LinkedIn from "../images/linkedin-logo.png";
import Twitter from "../images/twitter.png";
---

<header class="h-20 flex mb-16 items-center border-b border-zinc-700">
  <div class="container flex justify-between items-center flex-wrap">
    <h2 class="text-center text-2xl text-slate-200  ">
      Ali Hassan's Blog
    </h2>
    <nav>
      <ul class="flex justify-center flex-wrap gap-6">
        <li>
          <a
            href="https://www.linkedin.com/in/thealihassandev/"
            target="_blank"
            class="_ linkedin"
            ><img class="w-6 invert" src={LinkedIn} alt="LinkedIn Icon" />
          </a>
        </li>
        <li>
          <a
            href="https://github.com/alihassan1177"
            target="_blank"
            class="_ github"
            ><img class="w-6 invert" src={Github} alt="Github Icon" />
          </a>
        </li>
        <li>
          <a
            href="https://twitter.com/alihassanDev"
            target="_blank"
            class="_ twitter"
            ><img class="w-6 invert" src={Twitter} alt="Twitter Icon" />
          </a>
        </li>
      </ul>
    </nav>
  </div>
</header>
